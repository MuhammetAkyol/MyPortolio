@model List<MyPortolioUdemy.DAL.Entities.SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";

}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya Hesaplarım</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Site Adı</th>
                                    <th scope="col">Link</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SocialMediaId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Url</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


